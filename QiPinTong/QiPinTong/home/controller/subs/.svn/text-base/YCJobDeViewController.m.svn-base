    if ([self.segStr isEqualToString:@"主页"]) {
        if (Homecell == nil) {
            Homecell = [[YCJobHomeTableViewCell alloc]initWithFrame:Homecell.bounds];
            Homecell.backgroundColor = HWColor(241, 241, 241);
            cell = Homecell;
            Homecell.imgView.image = [UIImage imageNamed:@"teacherImage"];
